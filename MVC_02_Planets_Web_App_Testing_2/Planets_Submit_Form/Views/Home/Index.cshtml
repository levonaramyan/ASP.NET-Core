
<div>
    <h1>Below is the form to submit your custom planets</h1>
    <form action="~/Planet/SubmitPlanets" method="post">

        @for (int i = 0; i < 8; i++)
        {
            <div class="planets">
                <p>
                    <b>Planet @(i + 1)</b>
                </p>
                <p>
                    <label>Name</label>
                    <input type="text" name="planets[@i].Name" />
                </p>
                <p>
                    <label>Position</label>
                    <input type="text" name="planets[@i].Position" />
                </p>
            </div>
            <hr />
        }
        <p>
            <input type="submit" name="SubmitButton" value="Submit Planets" />
        </p>
    </form>
</div>

